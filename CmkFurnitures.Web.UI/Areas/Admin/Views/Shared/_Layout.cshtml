<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bootstrap, from Twitter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Le styles -->
    <link href="@Url.Content("~/content/admin/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/content/admin/css/custom.css")" rel="stylesheet">
    <style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav
        {
            padding: 9px 0;
        }
    </style>
    <link href="@Url.Content("~/content/admin/css/bootstrap-responsive.css")" rel="stylesheet">
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">CMK Møbler</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        @{ Html.RenderAction("LoginDetails", "Home"); }
                    </p>
                    <ul class="nav">
                        <li><a href="@Url.Action("Index", "Home")"><i class="icon-white icon-home"></i> Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Home", new { area = "" })" target="_blank"><i class="icon-white icon-globe"></i> Vis siden</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Møbler</li>
                        <li><a href="@Url.Action("Index", "Furnitures")">Oversigt</a></li>
                        <li><a href="@Url.Action("Create", "Furnitures")">Opret nyt møbel</a></li>
                        <li><a href="@Url.Action("Index", "Designers")">Designere</a></li>
                        <li class="nav-header">Artikler (nyheder)</li>
                        <li><a href="@Url.Action("Index", "Articles")">Oversigt</a></li>
                        <li><a href="@Url.Action("Create", "Articles")">Opret ny artikel</a></li>
                        <li class="nav-header">Andet</li>
                        <li><a href="@Url.Action("Index", "StoreDetails")">Opdater informationer</a></li>
                    </ul>
                </div>
                <!--/.well -->
            </div>
            <!--/span-->
            <div class="span9">
                @RenderBody()
            </div>
            <!--/span-->
        </div>
        <!--/row-->
    </div>
    <!--/.fluid-container-->
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="@Url.Content("~/content/admin/js/bootstrap.js")"></script>
    @if (ViewBag.JavaScriptValidation != null & ViewBag.JavaScriptValidation)
    {
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    }
    @RenderSection("CustomJavascript", false)
</body>
</html>
