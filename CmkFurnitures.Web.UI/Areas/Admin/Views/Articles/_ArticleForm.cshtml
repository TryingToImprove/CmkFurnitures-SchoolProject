@model ArticleFormViewModel
<div class="control-group">
    <label class="control-label">
        Overskrift</label>
    <div class="controls">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Indhold</label>
    <div class="controls">
        @Html.TextAreaFor(model => model.Text, new { @class = "input-xxlarge", rows = 10 })
        @Html.ValidationMessageFor(model => model.Text)
    </div>
</div>
<div class="control-group">
    <label class="control-label">
        Forfatter</label>
    <div class="controls">
        @Model.AuthorName
    </div>
</div>
