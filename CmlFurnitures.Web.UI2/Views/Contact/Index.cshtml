@{
    ViewBag.Title = "Contact";
}
<section class="contact-opening-hours">
    <h2>Åbningstider</h2>
    <p>
        <span>Mandag-Torsdag fra 10:00-17:30</span>
        <span>Fradag fra 10:00-18:00</span>
        <span>Lørdag fra 9:30-14:00</span>
    </p>
</section>
<form class="contact-form">
    <div class="control-group">
        <label>
            Navn:</label>
        <div class="controls">
            <input type="text" />
        </div>
    </div>
    <div class="control-group">
        <label>
            Adresse:</label>
        <div class="controls">
            <input type="text" />
        </div>
    </div>
    <div class="control-group">
        <label>
            Telefon:</label>
        <div class="controls">
            <input type="text" />
        </div>
    </div>
    <div class="control-group">
        <label>
            E-mail:</label>
        <div class="controls">
            <input type="text" />
        </div>
    </div>
    <div class="control-group">
        <label>
            Kommentar:</label>
        <div class="controls">
            <textarea></textarea>
        </div>
    </div>
    <div class="control-buttons-right no-inline">
        <button type="submit">Send</button>
    </div>
</form>
